extends layout.pug
block link
block titulo
    title Iniciar sesión
block contenido
    
    form#formLogin.mt-5(action="LogearUsuario", method="POST", onsubmit="return validarLogeo()")
        h2.text-center.mb-4 Iniciar sesión
        .row.justify-content-center.mx-0
            .col-4
                .mb-4
                    label(for="correo") Correo : (correo@mail.com)
                    input#correo(type="text", name="correo",class="form-control" required)
                .mb-4
                    label(for="contrasenia") Contraseña: (entre 6 y 10 caracteres)
                    input#contrasenia(type="password", name="contrasenia",class="form-control" required)
        .text-center
            button.btn.btn-primary(type="submit") Ingresar
        if registroExitoso
            #registroExitosoToast.toast.toast-container.position-fixed.top-50.start-50.translate-middle(role='alert', aria-live='assertive', aria-atomic='true')
                .toast-header.bg-success
                    strong.me-auto.text-white Registro Exitoso
                    button.btn-close(type='button', data-bs-dismiss='toast', aria-label='Close', aria-hidden='true')
                .toast-body
                    | &iexcl;Tu registro se ha completado exitosamente!


block scripts
    script(src="./js/cuenta.js")